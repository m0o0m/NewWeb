        function FreezeNum() {
            var _UserID = $("#hidUID").val();//id
            var _Reason = $("input[name=result]:checked").val();//原因

            // return false;
            $.ajax({
                url: "/Member/FMPut/",
                type: "post",
                dataType: "json",
                data: { "dwUserID": _UserID, "strAccount": "true", "Reason": _Reason },
                success: function (data) {
                    if (data == 2020) {
                        window.location.reload();
                        return false;
                    }
                    switch (data.result) {

                        case 0:
                            alert('已将玩家【' + $("#spanFreeze").html() + '】的账号封号');
                            closeFreez();
                            break;
                        case 1:
                            alert("封号失败，请稍后再试");
                            break;
                        case 2:
                            alert("服务器未启动，请稍后再试");
                            break;
                        default:
                            alert('未知错误');
                            break;
                    }
                }
            }).fail(function (xhr, textStatus, err) {
                alert('服务器繁忙，请稍候再试');
            });
        }
