@model BaseDataView
@{
    ViewBag.Title = "会员邮件 -- 列表";
    if (Request.IsAjaxRequest())
    {
        Layout = null;

    }
    else
    {
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
}

