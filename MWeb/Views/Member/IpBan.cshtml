@section scripts{
    @{Html.RegisterMvcPagerScriptResource();}


    <script src="/js/bootstrap.min.js"></script>
    <script src="/js/select2.min.js"></script>
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">

        // resets the menu selection upon entry to this page:
        function resetMenu() {
            document.gomenu.selector.selectedIndex = 2;
        }

        function byteRangeLength(value, param) {
            var length = value.length;
            for (var i = 0; i < value.length; i++) {
                if (value.charCodeAt(i) > 127) {
                    length++;
                }
            }
            return (length >= param[0] && length <= param[1]);
        }

        function btnSubmit(obj) {
            _this = $(obj).parent().parent();

            var _Total = _this.find("input[name=Total]").val();
            var _Reason = _this.find("input[name=Reason]").val();


            if (_Total.length == 0) {
                alert("数量不能为空");
                return false;
            }
            if (_Reason.length == 0) {
                alert("修改原因不能为空");
                return false;
            }

            if (!byteRangeLength(_Reason, [0, 90])) {
                alert("修改原因不能超过45个字");
                return false;
            }


            $.ajax({
                url: "/Member/IpBan/",
                type: "POST",
                dataType: "JSON",
                data: $('#subfrom').serialize(),
                success: function (data) {
                    switch (data.result) {
                        case 0:
                            location.href = "/Member/RedisterIP";
                            break;
                        case 1:
                            alert("添加失败，请与管理员联系");
                            break;
                        case 200:
                            alert("值不能为空，请稍后再试");
                            break;
                        default:
                            alert(data.msg);
                            break;
                    }
                }
            }).fail(function (xhr, textStatus, err) {
                alert('Error: ' + err);
            });

            return false;

        }

    </script>
}
