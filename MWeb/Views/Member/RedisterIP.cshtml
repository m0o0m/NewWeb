@using GL.Data.Model
@using GL.Data.View
@model ValueView
@{
    ViewBag.Title = "同IP下注册管理列表";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<div id="content">
    <form id="comment-form" class="smart-form" novalidate="novalidate" method="post">
        <div class="row">
            <div class="widget-body">
                <section class="col col-2">
                    <label class="label">IP</label>
                    <label class="input">
                        @Html.TextBoxFor(m => m.Value, new { @class = "span2", style = "border-radius:4px" })
                    </label>
                </section>
              
                <section class="col col-1">
                    <label class="label">&nbsp;</label>
                    @*<button type="submit" class="btn btn-success btn-sm">查询</button>*@
                    <input type="button" onclick="search()" class="btn btn-success btn-sm" value="查询" />
                </section>
            </div>
        </div>
    </form>

    <div class="row-fluid">
        <div class="widget-box" id="box">
            @Html.Partial("RedisterIP_PageList", Model.DataList)

        </div>
    </div>

</div>





    @section scripts{
        @{Html.RegisterMvcPagerScriptResource();}


        <script src="/js/bootstrap.min.js"></script>
        <script src="/js/select2.min.js"></script>
        @Styles.Render("~/Style/bootstrap-datetimepicker")
        @Scripts.Render("~/bundles/bootstrap-datetimepicker")


        <script type="text/javascript">

            $(document).ready(function () {
                $('select').select2({
                    allowClear: false,
                    minimumResultsForSearch: -1
                });
                $('.datepicker').datetimepicker({
                    minView: "month", //选择日期后，不会再跳转去选择时分秒
                    format: "yyyy-mm-dd hh:ii:ss", //选择日期后，文本框显示的日期格式
                    language: 'zh-CN', //汉化
                    autoclose: true //选择日期后自动关闭
                });

            });

            function btnBan(obj) {
                location.href = "/Member/IpBan?Ip=" + obj;
                return false;
            }


        </script>

    }
