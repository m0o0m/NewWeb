@using GL.Data.View
@model GameRecordView
@{
    ViewBag.Title = "彩金数据";
    Layout = "~/Views/Shared/_Layout.cshtml";

    List<PotGold> PotList = (List<PotGold>)Model.DataList;

}



<div id="content">

    <form id="comment-form" class="smart-form" novalidate="novalidate">
        <div class="row">
            <div class="widget-body">
                <fieldset>
                    <hr>
                    @foreach (var item in PotList)
            {
                        <div class="row">
                          

                            <section class="col col-1.2">
                                <label class="label">&nbsp;</label>

                                <label class="input">
                                   


                                    @{
                                        gameID type = (gameID)item.GameType;

                                        string stype = type.ToString();

                                        if (stype.Length == 3)
                                        {
                                                <h4>
                                                @stype  &nbsp; &nbsp;
                                                </h4>
                                        }
                                         else {
                                                    <h4>
                                                        @stype
                                                    </h4>
                                          }


                                    }
                                               
                                </label>
                            </section>
                            <section class="col col-1.2">
                                <label class="label"><text>彩金</text> </label>
                              
                                <label class="input">
                                    <input type="text" id="ChipPot" name="ChipPot" readonly="readonly" class="span4" value="@item.Gold" />
                                </label>
                            </section>
                            <section class="col col-1.2">
                                <label class="label"><text>基准值</text> </label>

                                <label class="input">
                                    <input type="text" id="ChipPot" name="ChipPot" readonly="readonly" class="span4" value="@item.Standard" />
                                </label>
                            </section>
                            <section class="col col-1">
                                <label class="label">&nbsp;</label>
                                <input data-edit="@item.GameType" type="button" value="修改" class="btn btn-danger btn-sm" />
                            </section>
                        </div>
                        <hr>
                        <br>

                    }

                </fieldset>




            </div>
        </div>
    </form>







</div>


@section scripts{
    @{Html.RegisterMvcPagerScriptResource();}
    <script src="/js/bootstrap.min.js"></script>
    <script src="/js/select2.min.js"></script>

    <script type="text/javascript">


        // resets the menu selection upon entry to this page:
        function resetMenu() {
            document.gomenu.selector.selectedIndex = 2;
        }

        $(function () {
            $("input[data-edit]").click(function () {
                location.href = "/Robot/PotGoldUpdate?gametype=" + $(this).attr("data-edit");
              
             
            });
        });

    </script>
}
