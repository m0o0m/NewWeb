@using GL.Data.Model
@using GL.Data.View
@model BaseDataView
@{
    ViewBag.Title = "库存设置";
    Layout = "~/Views/Shared/_Layout.cshtml";

}





<div id="content">

   

    <form id="comment-form" class="smart-form" novalidate="novalidate">


        <div class="row">
            <section class="col col-1">
                <label class="label">&nbsp;</label>

                <input type="button" onclick="addGroup()" class="btn btn-success btn-sm" value="添加库组" />
            </section>
        </div>

        <div class="row">
            <div class="widget-body">

                <section class="col col-1.1">
                    <label class="label">库组</label>
                    <label class="input">
                        @Html.TextBoxFor(m => m.SearchExt2, new { @class = "span2", style = "border-radius:4px" })
                    </label>
                </section>



                <section class="col col-1.1">
                    <label class="label">账户</label>
                    <label class="input">
                        @Html.TextBoxFor(m =>m.SearchExt, new { @class = "span2", style = "border-radius:4px" })
                    </label>
                </section>


              
                <section class="col col-1">
                    <label class="label">&nbsp;</label>
                    <input type="button" onclick="search()" class="btn btn-success btn-sm" value="查询" />
                </section>

            </div>
        </div>
    </form>

    <div class="row-fluid">
        <div class="widget-box" id="box">
            @Html.Partial("EmailStock_PageList", Model.BaseDataList)
        </div>
    </div>
</div>





