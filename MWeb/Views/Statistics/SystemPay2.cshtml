@Html.PartialSearch(new Search() { 
    SearchFunc="mysearch", Items=new List<MWeb.Control>() {
         new MWeb.DateTimeControl { ID="StartDate", Name="StartDate", ViewName="开始时间" },
          new MWeb.DateTimeControl { ID="ExpirationDate", Name="ExpirationDate", ViewName="结束时间" },
    }
})
