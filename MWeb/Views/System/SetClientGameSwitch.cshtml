                            case "0,1,0":
                            case "0,0,0":
                                //var s = data.result.split(',');
                                //var ck1ckheck = s[0] ;
                                //var ck2ckheck = s[1] ;
                                //var ck3ckheck = s[2] ;
                                //if(ck3ckheck=="1"){
                                //    $("#ck3").attr("checked","checked");
                                //}else{
                                //    $("#ck3").removeAttr("checked");
                                //}
                                //if(ck2ckheck=="1"){
                                //    $("#ck2").attr("checked","checked");
                                //}else{
                                //    $("#ck2").removeAttr("checked");
                                //}
                                //if(ck1ckheck=="1"){
                                //    $("#ck1").attr("checked","checked");
                                //}else{
                                //    $("#ck1").removeAttr("checked");
                                //}

                                alert('设置成功！');
                                break;

                            default:
                                alert('未知错误');
                                break;
                        }
                    }
                });

                return false;
            }
        }



